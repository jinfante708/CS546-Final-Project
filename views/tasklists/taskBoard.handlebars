<h1>
    Task Board 
</h1>


<form id = "createNewList" action = "/tasklists" method=  "POST">

    <label>
        Create a new list:
        <br>
        <input type = "text" name= "listName" id = "listName" placeholder="name of new list">
    </label>

    <label>
        <button type="submit">Create</button>
    </label>
</form>

    <p id="error" class="error">
    </p>

<ul id = "taskLists_on_board">
    {{#each taskLists}}

    {{!-- <li>{{this.listName}}</li> --}}

    <li><a href = "/tasks/tasksfortasklist/{{this._id}}">{{this.listName}}</a></li>


    {{/each}}
</ul>


