<div class="container d-flex flex-column mt-4">
    <div class="row align-items-center justify-content-center g-0">
        <div class="col-lg-5 col-md-8 py-8 py-xl-0">
            <div class="card shadow">
                <div class="card-body p-6">

                    <div class="mb-4">
                        <h1 class="mb-1 fw-bold">Sign up</h1>
                        <span>Already have an account?
                            <a href="/users" class="ms-1">Sign in</a></span>
                    </div>

                    <form action="/users/signup" id="signup-form" class="needs-validation" novalidate>

                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name<span class="mandatory">*</span></label>
                            <input type="text" id="firstName" class="form-control" name="firstName"
                                placeholder="Enter your first name here" required="required" autocomplete="off" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                First name is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                First name should have only alphabetical characters and/or spaces.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name<span class="mandatory">*</span></label>
                            <input type="text" id="lastName" class="form-control" name="lastName"
                                placeholder="Enter your last name here" required="required" autocomplete="off" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Last name is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Last name should have only alphabetical characters and/or spaces.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email<span class="mandatory">*</span></label>
                            <input type="email" id="email" class="form-control" name="email"
                                placeholder="Enter your email address here" required="required" autocomplete="off" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Email is mandatory and it should be in valid format.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="dateOfBirth" class="form-label">Date of
                                Birth<span class="mandatory">*</span></label>
                            <input type="date" id="dateOfBirth" class="form-control" name="dateOfBirth"
                                required="required" autocomplete="off" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Date of birth is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Date of birth should be before today's date.
                            </div>
                            <div class="invalid-feedback">
                                Date of birth should be valid date with format `mm/dd/yyyy`.
                            </div>

                        </div>

                        <label for="password" class="form-label">Password<span class="mandatory">*</span></label>
                        <div class="mb-3 input-group">
                            <input type="password" id="password" class="form-control" name="password"
                                placeholder="********" required="required" autocomplete="off" />
                            <button class="btn btn-outline-secondary show-password" type="button">Show</button>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Password is mandatory.
                            </div>
                            <div class="invalid-feedback">
                                Password should be of at least 8 characters long.
                            </div>
                            <div class="invalid-feedback">
                                Password should have only alphanumeric or special characters and no spaces.
                            </div>
                        </div>

                        <p class="text-danger d-none" id="error-message"></p>

                        <div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Create Account
                                </button>
                            </div>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
</div>

